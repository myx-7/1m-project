# Database Configuration
# Set to 'true' to enable database, 'false' to use mock data
VITE_USE_DATABASE=false

# Supabase Configuration (when database is enabled)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Optional: Supabase Service Role Key (for admin operations)
VITE_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Arweave Configuration (for file uploads)
# IMPORTANT: For production, use a server-side proxy instead of client-side keys
# This is a JSON string containing your Arweave wallet key
# VITE_ARWEAVE_KEY='{"d":"your-d-value","dp":"your-dp-value",...}' 


